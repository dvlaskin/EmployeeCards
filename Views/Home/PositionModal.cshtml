<!-- Position New Add Modal -->
<div class="modal fade" id="positionModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Новая должность</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body offset-2 col-8">
                <row>
                    <p id="pMError" class="text-danger"></p>
                    <label for="pMPosition">Должность</label>
                    <input type="text" class="form-control" id="pMPosition" placeholder="Middle Dev" required>
                </row>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="positionCancel">Отменить</button>
                <button type="button" class="btn btn-primary" id="positionSave">Сохранить</button>
            </div>
        </div>
    </div>
</div>
